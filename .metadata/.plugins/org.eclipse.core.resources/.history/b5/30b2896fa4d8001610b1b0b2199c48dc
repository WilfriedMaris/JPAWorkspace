package be.vdab.servlets.artikels;

import java.io.IOException;
import java.math.BigDecimal;
import java.util.HashMap;
import java.util.Map;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import be.vdab.entities.Artikel;
import be.vdab.services.ArtikelService;

@WebServlet("/ArtikelToevoegen")
public class ArtikelToevoegen extends HttpServlet {
	private static final long serialVersionUID = 1L;
	private final transient ArtikelService artikelService = new ArtikelService();
	
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String naam = request.getParameter("naam");
		BigDecimal aankoopprijs = BigDecimal.valueOf(Long.parseLong(request.getParameter("aankoopprijs")));
		BigDecimal verkoopprijs = BigDecimal.valueOf(Long.parseLong(request.getParameter("verkoopprijs")));
		Artikel artikel = new Artikel(naam, aankoopprijs, verkoopprijs);
		Map<String, String> fouten = new HashMap<>();
		if(!artikel.isNaamValid(naam)){
			fouten.put("naam", "Geef een geldige naam in");
		}
		if(!artikel.isAankoopprijsValid(aankoopprijs)){
			fouten.put("aankoopprijs", "Geef een geldige aankoopprijs in");
		}
		if(!artikel.isVerkoopprijsValid(verkoopprijs)){
			fouten.put("verkoopprijs", "Geef een geldige verkoopprijs in");
		}
		
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
	}

}
