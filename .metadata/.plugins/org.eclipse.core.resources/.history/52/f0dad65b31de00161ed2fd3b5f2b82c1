package be.vdab.servlets.artikels;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import be.vdab.repositories.ArtikelRepository;

@WebServlet("/artikels/zoekenopnaam.htm")
public class NaamZoekenServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
	private final transient ArtikelRepository artikelRepository = new ArtikelRepository();
	private final static String VIEW = "WEB-INF/JSP/artikel/zoekenOpNaam.jsp";

	@Override
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		request.setAttribute("namen", artikelRepository.findByName(request.getParameter("naam")));
		request.getRequestDispatcher(VIEW).forward(request, response);
	}

}
